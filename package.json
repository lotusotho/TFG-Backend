{
  "name": "TFG-Backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "compile": "tsc && tsc-alias",
    "compileDev": "tsc && tsc-alias && node dist/app.js",
    "copy-templates": "mkdir -p dist/templates && copyfiles -u 2 'src/templates/**/*' dist/templates",
    "build": "npm run compile && npm run copy-templates",
    "exe": "node dist/app.js",
    "dev": "nodemon -e ts  --exec \"pnpm run compileDev\"",
    "lint": "eslint .",
    "start:docker": "docker-compose --env-file ./.env -f docker/docker-compose.yml up -d",
    "typeorm:migration-gen": "npx typeorm migration:generate InitialMigration -d dist/services/data-source.js",
    "typeorm:migration-run": "npx typeorm migration:run -d dist/services/data-source.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.0",
    "nodemailer-mailgun-transport": "^2.1.5",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "TFG-Backend": "file:",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-mailgun-transport": "^1.4.6",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.9",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2"
  }
}
